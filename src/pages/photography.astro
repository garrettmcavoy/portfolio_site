---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Garrett McAvoy">
    <div class="cv-container">
        <div class="photography-container">
            <div class="year-section">
                <p class="year-title">2024</p>
                <div class="photo-display">
                    <input type="radio" name="slider" id="slide1" checked />
                    <input type="radio" name="slider" id="slide2" />
                    <input type="radio" name="slider" id="slide3" />
                    <input type="radio" name="slider" id="slide4" />
                    <!-- Add as many inputs as you have images -->

                    <div class="slides">
                        <label for="slide1" class="slide">
                            <img src="../images/2024/2024_7.jpg" alt="Image 1" />
                        </label>
                        <label for="slide2" class="slide">
                            <img src="../images/2024/2024_22.jpg" alt="Image 2" />
                        </label>
                        <label for="slide3" class="slide">
                            <img src="../images/2024/2024_19.jpg" alt="Image 3" />
                        </label>
                        <label for="slide4" class="slide">
                            <img src="../images/2024/2024_6.jpg" alt="Image 4" />
                        </label>
                        <!-- Add as many labels as you have images -->
                    </div>

                    <div class="nav-buttons">
                        <label for="slide1" class="nav prev">❮</label>
                        <label for="slide2" class="nav next">❯</label>
                        <label for="slide3" class="nav next">❯</label>
                        <label for="slide4" class="nav next">❯</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .cv-container {
        overflow: hidden;
        display: flex;
        padding: 0;
        margin: 0 auto;
        flex-direction: column;
        box-sizing: border-box;
        align-items: center;
    }

    .photography-container {
        max-width: 80%;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        align-items: center;
    }

    .year-section {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
    }

    .photo-display {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    /* Hide the radio inputs */
    .photo-display input {
        display: none;
    }

    /* Style the slides */
    .slides {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    .slide {
        position: absolute;
        opacity: 0;
        transition: opacity 0.5s ease;
    }

    input#slide1:checked ~ .slides label:nth-of-type(1),
    input#slide2:checked ~ .slides label:nth-of-type(2),
    input#slide3:checked ~ .slides label:nth-of-type(3),
    input#slide4:checked ~ .slides label:nth-of-type(4) {
        opacity: 1;
        z-index: 1;
    }

    .slide img {
        max-width: 100%;
        max-height: 600px;
        object-fit: cover;
        border-radius: 10px;
    }

    /* Navigation buttons */
    .nav-buttons {
        display: flex;
        justify-content: space-between;
        width: 100%;
        margin-top: 1rem;
    }

    .nav {
        cursor: pointer;
        font-size: 2rem;
        color: black;
        text-decoration: none;
        background: rgba(255, 255, 255, 0.8);
        padding: 0.5rem;
        border-radius: 50%;
        transition: background 0.3s ease;
    }

    .nav:hover {
        background: rgba(0, 0, 0, 0.5);
        color: white;
    }
</style>