    padding-right: 200px;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .images {
    display: flex;
    padding-right: 200px;
    max-width: 900px;
    flex-direction: column; /* Stack images vertically */
    gap: 1rem; /* Add spacing between images */
