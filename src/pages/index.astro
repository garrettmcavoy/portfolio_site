---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Garrett McAvoy">

  <!-- BEGIN: Engineering Title Block -->
  <div class="title-block-wrapper">

    <!-- Main outer table to include the left row with text, top header, and bottom row with 4,3,2,1 -->
    <table class="outer-title-table">
      <tr>
        <!-- "A" Column on the far right, spanning all rows -->
        <td class="right-column-letter" rowspan="7">
          A
        </td>
      </tr>

      <!-- ROW 1: Unless otherwise specified / Angular / Surface Finish + Name/Sign/Date block -->
      <tr>
        <td>
          <table class="internal-table">
            <tr>
              <!-- Left block: "Unless otherwise specified" text -->
              <td class="specs-cell" rowspan="2">
                <strong>UNLESS OTHERWISE SPECIFIED,<br/>
                DIMENSIONS ARE IN MILLIMETERS</strong><br/><br/>
                ANGULAR = ±1°<br/>
                <strong>SURFACE FINISH</strong> <span class="finish-checkmark">&#10004;</span>
              </td>
              <!-- Top-right block: Drawn / Checked / Approved -->
              <td class="drawn-cell">
                <div><strong>NAME</strong></div>
                Mathew Wade
              </td>
              <td class="drawn-cell">
                <div><strong>SIGNATURE</strong></div>
                &nbsp;
              </td>
              <td class="drawn-cell">
                <div><strong>DATE</strong></div>
                2021-12-02
              </td>
            </tr>

            <tr>
              <td class="drawn-cell">
                <div><strong>CHECKED</strong></div>
                John Kyle
              </td>
              <td class="drawn-cell">
                <div><strong>APPROVED</strong></div>
                John Kyle
              </td>
              <td class="drawn-cell">
                <div><strong>DATE</strong></div>
                2021-12-03
              </td>
            </tr>

            <!-- Extra row: "Do not scale drawing" etc. -->
            <tr>
              <td class="notes-cell" colspan="4">
                <strong>DO NOT SCALE DRAWING</strong><br/>
                BREAK ALL SHARP EDGES AND REMOVE BURRS<br/>
                <strong>FIRST ANGLE PROJECTION</strong>
              </td>
            </tr>
          </table>
        </td>
      </tr>

      <!-- ROW 2: Big Title row (WERK24, SHEET METAL SERVO BRACKET) -->
      <tr>
        <td>
          <table class="internal-table title-row">
            <tr>
              <td class="werk24-logo">
                <strong>WERK24</strong>
              </td>
              <td class="part-title-cell">
                SHEET METAL SERVO BRACKET
              </td>
            </tr>
          </table>
        </td>
      </tr>

      <!-- ROW 3: Material / Finish / Dwg No. -->
      <tr>
        <td>
          <table class="internal-table triple-row">
            <tr>
              <td>
                <strong>MATERIAL</strong><br/>
                DC07 COLD ROLLED STEEL
              </td>
              <td>
                <strong>FINISH</strong><br/>
                POWDER COATING
              </td>
              <td>
                <strong>DWG NO.</strong><br/>
                01WK0000312
              </td>
            </tr>
          </table>
        </td>
      </tr>

      <!-- ROW 4: Scale / Weight / Sheet / Rev -->
      <tr>
        <td>
          <table class="internal-table triple-row">
            <tr>
              <td>
                <strong>SCALE:</strong> 2:1
              </td>
              <td>
                <strong>WEIGHT:</strong> 0.65 kg
              </td>
              <td>
                <strong>SHEET:</strong> 1 OF 1 &nbsp; | &nbsp; 
                <strong>REV:</strong> 01
              </td>
            </tr>
          </table>
        </td>
      </tr>

      <!-- ROW 5: Tolerance Standard ISO 2768-mK (or anything else) -->
      <tr>
        <td>
          <table class="internal-table single-row">
            <tr>
              <td>
                <strong>TOLERANCE STANDARD</strong><br/>
                ISO 2768-mK
              </td>
            </tr>
          </table>
        </td>
      </tr>

      <!-- ROW 6 (the bottom row of the outer table): 4, 3, 2, 1 -->
      <tr>
        <td class="bottom-number-row">
          <!-- The 4,3,2,1 labels spanning across the bottom horizontally -->
          <table class="numbers-table">
            <tr>
              <td>4</td>
              <td>3</td>
              <td>2</td>
              <td>1</td>
            </tr>
          </table>
        </td>
      </tr>

    </table>
  </div>
  <!-- END: Engineering Title Block -->

</Layout>

<!-- Inline Styles -->
<style>
/* Basic reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.title-block-wrapper {
  margin: 2rem auto;
  padding: 1rem;
  width: 900px;
  background-color: #fff;
  border: 1px solid #000;
}

/* Outer table that holds everything, including the "A" column on the right and bottom row with 4,3,2,1 */
.outer-title-table {
  border-collapse: collapse;
  width: 100%;
}

/* Every cell in outer table gets a border, except we manage some carefully with nested tables */
.outer-title-table td {
  border: 1px solid #000;
  vertical-align: top;
}

/* The vertical "A" on the right side */
.right-column-letter {
  width: 30px; /* adjust as needed */
  text-align: center;
  writing-mode: vertical-rl;
  transform: rotate(180deg); /* optional flip */
  font-weight: bold;
  font-size: 1.2rem;
  background-color: #efefef;
}

/* The bottom row that has 4, 3, 2, 1 labels */
.bottom-number-row {
  padding: 0; /* We'll nest a table inside */
}

/* Table that holds the 4,3,2,1 labels along the bottom */
.numbers-table {
  width: 100%;
  border-collapse: collapse;
}
.numbers-table td {
  border-right: 1px solid #000;
  text-align: center;
  font-weight: bold;
  width: 25%;
  padding: 0.5rem;
}
.numbers-table td:last-child {
  border-right: none;
}

/* Nested internal tables for each row */
.internal-table {
  width: 100%;
  border-collapse: collapse;
  table-layout: fixed;
}
.internal-table td {
  border: none; /* Let the parent table handle main borders */
  vertical-align: top;
  padding: 0.5rem;
  font-size: 0.9rem;
}

/* "Unless otherwise specified..." cell */
.specs-cell {
  width: 50%;
  font-size: 0.9rem;
}

/* Cells for drawn, checked, approved info */
.drawn-cell {
  width: 16.66%;
  border-left: 1px solid #000;
  text-align: center;
}

/* The row with "DO NOT SCALE DRAWING..." */
.notes-cell {
  border-top: 1px solid #000;
  text-align: center;
  font-size: 0.85rem;
  padding-top: 1rem;
}

/* Title row (WERK24, PART TITLE) */
.title-row tr td {
  border: none;
  text-align: center;
}
.werk24-logo {
  width: 25%;
  text-align: left;
  font-weight: bold;
  font-size: 1.2rem;
}
.part-title-cell {
  text-align: left;
  font-size: 1.2rem;
  font-weight: bold;
  padding-left: 1rem;
}

/* 3-column row (Material, Finish, Dwg No) or (Scale, Weight, Sheet) */
.triple-row tr td {
  width: 33.33%;
  text-align: center;
  border-left: 1px solid #000;
}
.triple-row tr td:first-child {
  border-left: none;
}

/* Single-row block for Tolerance Standard ISO 2768-mK */
.single-row tr td {
  text-align: center;
}

/* Checkmark for surface finish */
.finish-checkmark {
  font-size: 1.2rem;
  margin-left: 0.25rem;
}
</style>