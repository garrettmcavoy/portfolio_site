---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Garrett McAvoy">
  <div class="cv-container">

    <!-- Work Section -->
    <div class="section">
      <p class="section-title">Work Experience</p>

      <!-- Apple Entry -->
      <div class="entry">
        <div class="experience">
          <div class="entry-heading">
            <p>Apple - Manufacturing Design Engineer</p>
            <span class="date-item">August 2025 - Present</span>
          </div>
          </p>
        </div>
      </div>

      <!-- Apple Entry -->
      <div class="entry">
        <div class="experience">
          <div class="entry-heading">
            <p>Apple - Manufacturing Design Engineer Intern</p>
            <span class="date-item">April 2023 - March 2024</span>
          </div>
          </p>
        </div>
      </div>

      <!-- W. L. Gore Entry -->
      <div class="entry">
        <div class="experience">
          <div class="entry-heading">
            <p>W. L. Gore & Associates - Mechanical Engineering Intern</p>
            <span class="date-item">June 2022 - September 2022</span>
          </div>
          <div class="tagline">
            <p>
              Supported manufacturing for <a href="https://www.goremedical.com/products/excluder" target="_blank" rel="noopener noreferrer">cool medical devices</a>.
            </p>
          </div>
          <div class="skills">
            <p>
              Mechanical&nbsp;Fixture&nbsp;Design • Manufacturing&nbsp;Line&nbsp;Optimization 
              • Regulatory&nbsp;Constraints • Database&nbsp;Management • SLA&nbsp;3D&nbsp;Printing
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Project Section -->
    <div class="section">
      <p class="section-title">Project Experience</p>

      <div class="entry">
        <div class="experience">
          <div class="entry-heading">
            <p>Edwards Lifesciences - MEDITEC Senior Project</p>
            <span class="date-item">September 2024 - June 2025</span>
          </div>
          <p class="tagline">
            Designed a novel medical device.
          </p>
          <p class="skills">
            Mechanical&nbsp;System&nbsp;Design • DFM • FMEA • Functional&nbsp;Prototyping
          </p>
        </div>
      </div>
    </div>

    <!-- Education Section -->
    <div class="section">
      <p class="section-title">Education</p>

      <div class="entry">
        <div class="experience">
          <div class="entry-heading">
            <p>B.S. Mechanical Engineering<br>California Polytechnic State University, San&nbsp;Luis&nbsp;Obispo,&nbsp;CA</p>
            <span class="date-item">Recieved June 2025</span>
          </div>
        </div>
      </div>
    </div>

  </div>
</Layout>

<style>
  /* General Container */
  .cv-container {
    /* Center the CV within its parent */
    max-width: 80rem; 
    width: 100%;
    margin: 0 auto;
    box-sizing: border-box;

    /* Give it some horizontal breathing room */
    padding: 0 2rem;
    padding-right: 200px;

    /* We just want a vertical column of sections */
    display: flex;
    flex-direction: column;
    gap: 0rem;
  }

  /* Section Container */
  .section {
    display: flex;
    flex-direction: column;
    margin-bottom: 0rem;
  }

  .section-title {
    font-weight: bold;
    margin-bottom: 1rem;
  }

  /* Each "entry" is just a vertical block now */
  .entry {
    display: block;
    margin-bottom: 1.5rem; /* space between entries */
    width: 100%;
  }

  /* Headline + Date in one row */
  .entry-heading {
    display: flex;
    justify-content: space-between; 
    align-items: flex-start;
    margin-bottom: 0.5rem; /* spacing below heading */
  }

  .entry-heading p {
    margin: 0;
  }

  .date-item {
    font-style: italic;
    white-space: nowrap; /* so date doesn't break mid-line */
  }

  .experience p {
    margin: 0;
  }

  /* Additional text styling */
  .tagline {
    padding-left: 2rem;
    padding-bottom: 0rem;
    padding-top: 0.5rem;
    font-size: 0.9em;
    line-height: 1.4;
  }

  .skills {
    padding-left: 2rem;
    padding-bottom: 1rem;
    padding-top: 0.5rem;
    padding-right: 2rem;
    font-size: 0.9em;
    line-height: 1.4;
    max-width: 75%;
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {

    .cv-container {
      padding: 0rem;
      padding-right: 1rem;
    }

    .entry-heading {
      /* Stack title & date vertically on small screens */
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }

    .tagline, .skills {
      padding-left: 1.5rem;
      max-width: 100%;
      padding-right: 0rem;
    }
  }
</style>
