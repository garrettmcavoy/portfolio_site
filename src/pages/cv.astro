---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Garrett McAvoy">
    <div class="cv-container">
        <!-- Education Section -->
        <div class="section">
            <p class="section-title">Education</p>
            <div class="entry">
                <div class="experience">
                    <p>California Polytechnic State University, San&nbsp;Luis&nbsp;Obispo, CA</p>
                    <p>Bachelor of Science, Mechanical Engineering</p>
                </div>
                <div class="date-item">
                    <span class="date-text">Expected June 2025</span>
                </div>
            </div>
        </div>

        <!-- Work Section -->
        <div class="section">
            <p class="section-title">Work</p>
            <div class="entry">
                <div class="experience">
                    <p>Apple - Manufacturing Design Engineer Intern</p>
                </div>
                <div class="date-item">
                    <span class="date-text">1 year, April 2023 - March 2024</span>
                </div>
            </div>
            <div class="entry">
                <div class="experience">
                    <p>W.L. Gore & Associates - Mechanical Engineering Intern</p>
                </div>
                <div class="date-item">
                    <span class="date-text">3 months, June 2022 - September 2022</span>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    /* General Container */
    .cv-container {
        max-width: 100%; /* Restrict overall width for readability */
        margin: 0rem auto;
        padding: 0rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    /* Section Container */
    .section {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .section-title {
        font-weight: bold;
        margin-bottom: 0rem;
    }

    /* Individual Entry (Experience + Date) */
    .entry {
        display: flex;
        justify-content: space-between; /* Experience and Date side by side */
        align-items: flex-start;
        gap: 1rem;
    }

    .experience {
        flex: 1; /* Takes up more space */
    }

    .experience p {
        margin: 0;
    }

    .date-item {
        flex: 1; /* Takes up less space */
        display: flex;
        justify-content: flex-start; /* Align dates to the left */
        align-items: center;
        font-style: italic;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
        .entry {
            flex-direction: column; /* Stack experience and date vertically */
            align-items: flex-start;
        }

        .date-item {
            margin-top: -1rem; /* Add space between experience and date */
        }
    }
</style>