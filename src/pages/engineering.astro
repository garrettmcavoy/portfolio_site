      <!-- 2022 Section -->
      <div class="year-section">
        <p class="year-title">2022</p>
        <!-- New scroll container -->
        <div class="engineer-scroll">
          <div class="image-wrapper">
            <a href="/biketrailer">
              <img
                src="/images/bike_trailer/thumbnail.png"
                alt="Bike Trailer"
                class="image"
