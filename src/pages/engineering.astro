---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Garrett McAvoy">
  <div class="cv-container">
    <!-- Engineering content starts here -->
    <div class="engineering-container">

      <!-- 2024 Section -->
      <div class="year-section">
        <p class="year-title">2024</p>
        <div class="image-wrapper">
          <a href="/turbineshaft">
            <img
              src="/images/turbineshaft/thumbnail.png"
              alt="Turbine Shaft Design"
              class="image"
            />
          </a>
          <p class="image-caption">
            <a href="/turbineshaft">Turbine Shaft Design</a>
          </p>
        </div>
      </div>

      <!-- 2022 Section -->
      <div class="year-section">
        <p class="year-title">2022</p>
        <div class="image-wrapper">
          <a href="/biketrailer">
            <img
              src="/images/bike_trailer/thumbnail.jpeg"
              alt="Bike Trailer"
              class="image"
            />
          </a>
          <p class="image-caption">
            <a href="/biketrailer">Bike Trailer</a>
          </p>
        </div>
      </div>

      <!-- 2020 Section -->
      <div class="year-section">
        <p class="year-title">2020</p>
        <div class="image-wrapper">
          <a href="/SFF">
            <img
              src="/images/sff_PC/thumbnail.png"
              alt="Small Form Factor PC"
              class="image"
            />
          </a>
          <p class="image-caption">
            <a href="/SFF">Small Form Factor PC</a>
          </p>
        </div>
      </div>

      <!-- 2018 Section -->
      <div class="year-section">
        <p class="year-title">2018</p>
      </div>

      <!-- 2017 Section -->
      <div class="year-section">
        <p class="year-title">2017</p>
      </div>
    </div>
    <!-- Engineering content ends here -->
  </div>
</Layout>

<style>
  /* 
    1) Keep .engineering-container and .year-section 
       as normal block elements (not flex) so they’re left-aligned.
    2) Use .image-wrapper { display: inline-block; text-align: center; } 
       so only the caption is centered relative to its image.
  */

  .cv-container {
    width: 100%;
    margin: 0;        
    padding: 0;
    box-sizing: border-box;
  }

  .engineering-container {
    max-width: 100%;
    overflow: hidden;
    padding: 0;
  }

  .year-section {
    margin-bottom: 1rem; 
  }

  .year-title {
    font-size: 1rem;
    font-weight: bold;
    margin-bottom: 0rem;
  }

  .year-section:last-of-type {
    margin-bottom: 5rem;
  }

  .image-wrapper {
    display: inline-block;  /* Keeps each image in normal “flow” */
    text-align: center;     /* Centers the caption under the image */
    margin-top: 1rem;
  }

  .image {
    max-width: 300px;
    height: auto;
    border: 1.5px solid transparent;
    border-radius: 12px;
    transition: border 0.2s ease-in-out;
  }

  .image:hover {
    border: 1.5px solid black;
  }

  .image-caption {
    margin-top: 0.5rem;
    font-style: italic;
    text-align: center;
  }

  .image-caption a {
    color: black;
  }

  @media (max-width: 768px) {
    .image {
      max-width: 200px;
    }
  }
</style>