<style>
  /* Container for entire CV */
  .cv-container {
    width: 100%;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* Main engineering container */
  .engineering-container {
    max-width: 100%;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Each year section */
  .year-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .year-title {
    font-size: 1rem;
    font-weight: bold;
    margin-bottom: 0rem;
  }

  .year-section:last-of-type {
    margin-bottom: 5rem; /* Adjust value as needed */
  }

  /* Horizontal scroll container (similar to .photo-scroll) */
  .engineer-scroll {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    padding-bottom: 0.5rem;
    scroll-snap-type: x mandatory;

    /* Hide scrollbar - Firefox, IE/Edge, and WebKit-based browsers */
    scrollbar-width: none;          /* Firefox */
    -ms-overflow-style: none;       /* IE and Edge */
  }
  .engineer-scroll::-webkit-scrollbar {
    display: none;
  }

  /* Image wrapper & styling */
  .image-wrapper {
    text-align: center;     /* Keeps the caption centered under each image */
    scroll-snap-align: center;
  }

  .image {
    max-width: 300px;
    height: auto;
    border: 1.5px solid transparent;
    border-radius: 12px;
    transition: border 0.2s ease-in-out;
  }

  .image:hover {
    border: 1.5px solid black;
  }

  .image-caption {
    margin-top: 0.5rem;
    text-align: center;
  }

  .image-caption a {
    color: black;
  }

  @media (max-width: 768px) {
    .image {
      max-width: 200px;
    }
  }
</style>
