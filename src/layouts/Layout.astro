---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
    </head>
    <body>
        <div class="layout-container">
            <!-- Sidebar / Navbar -->
            <aside class="sidebar">
                <div class="title">
                    <a href={`/portfolio_site/`}>Garrett McAvoy</a>
                </div>
                <nav>
                    <ul>
                        <li><a href={`/portfolio_site/about`}>About</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle">Portfolio</a>
                            <ul class="dropdown-menu">
                                <li><a href={`/portfolio_site/engineering`}>Engineering</a></li>
                                <li><a href={`/portfolio_site/photography`}>Photography</a></li>
                                <li><a href={`/portfolio_site/other`}>Other</a></li>
                            </ul>
                        </li>
                        <li><a href={`/portfolio_site/cv`}>CV</a></li>
                    </ul>
                </nav>
            </aside>

            <!-- Main Content -->
            <main class="main-content">
                <div class="responsive-container">
                    <slot />
                </div>
            </main>
        </div>

        <!-- Dropdown Script -->
        <script is:client>
            document.addEventListener("DOMContentLoaded", () => {
                const dropdownToggles = document.querySelectorAll(".dropdown-toggle");

                dropdownToggles.forEach(toggle => {
                    toggle.addEventListener("click", event => {
                        event.preventDefault();

                        const dropdownMenu = toggle.nextElementSibling;

                        if (dropdownMenu.classList.contains("open")) {
                            dropdownMenu.style.height = "0px";
                            dropdownMenu.classList.remove("open");
                        } else {
                            dropdownMenu.style.height = `${dropdownMenu.scrollHeight}px`;
                            dropdownMenu.classList.add("open");
                        }

                        document.querySelectorAll(".dropdown-menu").forEach(menu => {
                            if (menu !== dropdownMenu) {
                                menu.style.height = "0px";
                                menu.classList.remove("open");
                            }
                        });
                    });

                    document.addEventListener("click", event => {
                        if (!toggle.parentElement.contains(event.target)) {
                            const dropdownMenu = toggle.nextElementSibling;
                            dropdownMenu.style.height = "0px";
                            dropdownMenu.classList.remove("open");
                        }
                    });
                });
            });
        </script>
    </body>
</html>

<style is:global>
    /* Reset */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box; 
    }

    /* General Styles */
    html {
        font-family: "Garamond", serif;
        background: rgb(229, 229, 225);
        color: black;
        height: 100%;
    }

    body {
        margin: 0;
        height: 100%;
    }

    /* Layout Container */
    .layout-container {
        display: flex;
        min-height: 100vh;
        align-items: flex-start;
    }

    /* Sidebar / Navbar Styles */
    .sidebar {
        width: 175px; /* Fixed width for the sidebar */
        background-color: #2c3e5000;
        color: #ecf0f1;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between; /* Distribute space between title and nav */
        align-items: stretch; /* Ensure full width alignment */
        position: relative; /* Ensure it's the containing block for dropdown */
        overflow: visible; /* Prevent clipping */
    }

    .title {
        font-size: 1.25rem;
        font-weight: bold;
        align-self: flex-start; /* Align title to the left */
        margin: 0; /* Ensure no margin */
    }

    .title a {
        text-decoration: none;
        color: #000000;
    }

    nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    nav ul li {
        margin: 0.75rem 0;
        position: relative;
    }

    nav ul li a {
        text-decoration: none;
        color: #000000;
        display: block;
        padding: 0rem 0rem;
        transition: background 0.3s;
    }

    nav ul li a:hover {
        background-color: #34495e00;
    }

    /* Dropdown Styles */
    .dropdown-menu {
        width: 100%;
        list-style: none;
        padding: 0;
        margin: 0rem 0 0 0;
        overflow: hidden;
        height: 0px;
        background: #34495e00;
        transition: height 0.3s ease;
    }

    .dropdown-menu.open {
        height: auto;
        border-bottom: 1px solid black; /* Add this line */
    }

    .dropdown-menu li a {
        color: #000000;
        padding-left: 1rem;
    }

    /* Main Content Styles */
    .main-content {
        overflow: hidden;
        flex: 1;
        padding: 3.125rem 2rem 0rem 2rem;
        display: flex;
        justify-content: center; /* Center horizontally */
        align-items: flex-start; /* Align to top */
    }

    .responsive-container {
        max-width: 100%; /* 80% of the main content area */
        width: 100%;
        box-sizing: border-box;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
        .layout-container {
            flex-direction: column;
            align-items: center;
        }

        .sidebar {
            align-items: center;
            width: 100%;
            overflow:visible;
            position: relative;
            flex-direction: row;
            justify-content: space-between; /* Changed from space-around to space-between */
        }

        nav > ul {
            display: flex;
            flex-direction: row;
            margin: 0;
            padding: 0;
        }

        nav > ul > li {
            margin: 0;
            padding: 0;
        }

        nav > ul > li > a {
            padding-left: .5rem;
            padding-right: .5rem;
        }

        /* Reset styles for the dropdown menu */
        .dropdown-menu {
            display: block; /* Ensure it's displayed as a block element */
            position: absolute;
            top: 100%;
            left: .5;
            width: auto; /* Adjust width as needed */
            z-index: 1000;
        }

        .dropdown-menu li {
            display: block; /* Stack items vertically */
        }

        .dropdown-menu li a {
            padding-left: 0rem;
            padding-top: 0rem;
            display: block; /* Ensure links are block elements */
        }

        .main-content {
            margin-top: 2.5rem;
            padding: 1rem;
        }

        .responsive-container {
            max-width: 100%;
        }
    }
</style>