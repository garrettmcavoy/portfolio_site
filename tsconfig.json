{
  "compilerOptions": {
    "baseUrl": "./src",               // Use src/ as the base directory for imports
    "paths": { "*": ["*"] },          // Allow all imports relative to baseUrl
    "types": ["astro/client", "@astrojs/ts"],
    "allowJs": true,                  // Allow JavaScript files
    "strict": true,                   // Enable strict type-checking options
    "moduleResolution": "Node",       // Resolve modules like Node.js
    "target": "ESNext",               // Use the latest JavaScript features
    "module": "ESNext",               // Use ES modules
    "esModuleInterop": true           // Allow interoperability between CommonJS and ES modules
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.astro"], // Include all relevant files
  "exclude": ["node_modules"]         // Exclude node_modules to avoid type conflicts
}